<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pamella.moviesapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="App de filmes"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:name=".ui.app.AppApplication"
            android:theme="@style/Theme.MoviesApp">

        <activity android:name=".ui.activitys.ErrorActivity"/>
        <activity android:name=".ui.activitys.MovieDetailsActivity"/>
        <activity android:name=".ui.activitys.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>